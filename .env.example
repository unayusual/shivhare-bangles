# Django Settings
SECRET_KEY=your-secret-key-here-replace-with-strong-random-string
DEBUG=False

# Database Configuration (NeonDB)
# Get your NeonDB connection string from: https://console.neon.tech/
# Format: postgresql://user:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://user:password@ep-xxx-xxx.region.aws.neon.tech/neondb?sslmode=require

# Optional: Additional allowed hosts (comma-separated)
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Optional: Additional CSRF trusted origins (comma-separated)
# CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Configuration (Optional - for password reset)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
